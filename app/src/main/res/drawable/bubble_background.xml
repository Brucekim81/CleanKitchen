<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 효과를 위해 기본 배경 레이어 추가 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E7E9" /> <!-- 그림자 색상 (회색) -->
            <corners android:radius="16dp" />
            <padding
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <!-- 실제 말풍선 모양 레이어 -->
    <item android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">

            <!-- 그라데이션으로 입체감 -->
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#F0F0F0"
                android:angle="45" /> <!-- 위에서 아래로 그라데이션 -->

            <stroke
                android:width="0.5dp"
                android:color="@android:color/black" /> <!-- 테두리 색상 -->

            <solid android:color="@color/guide_activity_textview"/>

            <corners android:radius="16dp" /> <!-- 모서리 둥글기 -->

            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>

</layer-list>
